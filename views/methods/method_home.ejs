<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= methodName %> </title>
</head>
<body>
    <% if (methodName === 'blogEntry') { %>
        <button onclick="dropDownCom()">blogEntry.comments &#8628;</button>
        <br>
        <br>
        <section id="hidden-data-comments" style="display: none;">
            <textarea name="" id="" cols="150" rows="30">
                <%= JSON.stringify(linkData.linkblogEntry_comments.data) %> 
            </textarea>
        </section>
        <button onclick="dropDownView()">blogEntry.view &#8628;</button>
        <br>
        <br>
        <section id="hidden-data-view" style="display: none;">
            <textarea name="" id="" cols="50" rows="20">
                <%= JSON.stringify(linkData.linkblogEntry_view.data) %> 
            </textarea>
        </section>
    <% } else  if (methodName === 'contest'){ %>
        <button><a href="/methods/contest/forms/hacks"><%= methodName %>.hacks</a></button>
        <br>
        <br>
        <button onclick="dropDownList()">contest.list(gym=true) &#8628;</button>
        <br>
        <br>
        <section id="hidden-data-listT" style="display: none;">
            <textarea name="" id="" cols="150" rows="30">
                <%= JSON.stringify(linkData.likcontentlistT) %> 
            </textarea>
        </section>
        <button onclick="dropDownView()">contest.list(gym=false) &#8628;</button>
        <br>
        <br>
        <section id="hidden-data-listF" style="display: none;">
            <textarea name="" id="" cols="50" rows="20">
                <%= JSON.stringify(linkData.likcontentlistF) %> 
            </textarea>
    <% } %> 
    <script>
        function dropDownCom() {
            let data = document.getElementById('hidden-data-comments');
            if (data.style.display == 'none') {
                data.style.display = 'block';
            } else {
                data.style.display = 'none';
            }
        }
        function dropDownView() {
            let data = document.getElementById('hidden-data-view');
            if (data.style.display == 'none') {
                data.style.display = 'block';
            } else {
                data.style.display = 'none';
            }
        }
    </script> 
</body>
</html>